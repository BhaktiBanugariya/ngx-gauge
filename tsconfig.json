{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./dist",
        "module": "es2015",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "inlineSources": true,
        "stripInternal": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "files": [
        "dist/temp/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "dist",
        "skipTemplateCodegen": true
    }
}